<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border">

        <TextView
            android:text="@string/Option_label_5"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/lblOptionName"
            android:layout_weight="1"
            android:textSize="17dp"
            android:gravity="center_horizontal|center" />

        <EditText
            android:id="@+id/txtUserID"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:inputType="number"
            android:text="0"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border">

        <TextView
            android:text="@string/Option_label_1"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/lblOption1"
            android:layout_weight="1"
            android:textSize="17dp"
            android:gravity="center_horizontal|center" />

        <EditText
            android:id="@+id/txtNumOfTotalStim"
            android:inputType="number"
            android:textSize="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblOption2"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/Option_label_2"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/txtNumOfRealStim"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:inputType="number"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border">

        <TextView
            android:text="@string/Option_label_3"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/lblOption3"
            android:layout_weight="1"
            android:textSize="17dp"
            android:gravity="center" />

        <EditText
            android:id="@+id/txtNumOfAttempts"
            android:inputType="number"
            android:textSize="20dp"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border">

        <TextView
            android:text="@string/Option_label_4"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/lblOption4"
            android:layout_weight="1"
            android:textSize="17dp"
            android:gravity="center" />

        <EditText
            android:id="@+id/txtTimeout"
            android:hint="Enter 0 to disable timeout"
            android:textSize="20dp"
            android:inputType="number"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/dialogOptionsCancel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text=" Cancel "
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/image"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:transformPivotX="70dp" />

        <Button
        android:id="@+id/dialogOptionsOK"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text=" Ok "
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/dialogOptionsCancel"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>